<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgmian"
    android:padding="16dp">

    <EditText
        android:id="@+id/nameStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Staff name"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/postSpinner"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Select a post"
        />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter address of staff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/salary"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Enter salary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/BookButton"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="HIRE NEW STAFF"
        android:textSize="20dp"/>

</LinearLayout>
